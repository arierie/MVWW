<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:startDestination="@id/homeFragment"
            android:id="@+id/nav_graph">

    <fragment
            android:id="@+id/homeFragment"
            android:name="id.arieridwan.mvww.presentation.ui.home.HomeFragment">

        <action
                android:id="@+id/action_home_to_detailFragment"
                app:destination="@id/detailFragment"
                app:enterAnim="@anim/anim_enter"
                app:exitAnim="@anim/anim_exit"
                app:popEnterAnim="@anim/anim_pop_enter"
                app:popExitAnim="@anim/anim_pop_exit"/>

    </fragment>

    <fragment
            android:id="@+id/detailFragment"
            android:name="id.arieridwan.mvww.presentation.ui.detail.DetailFragment"/>

</navigation>